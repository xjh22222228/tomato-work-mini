@import '/src/assets/styles/base-class.wxss';

page {
  padding-bottom: 80px;
}

.information {
  padding: 15px;
  background: #f9f9f9;
}

.van-dropdown-menu__title:after {
  display: none;
}

.filter-wrapper {
  display: flex;
}

.price-detail {
  padding: 15px 10px;
  border-bottom: 1px solid #f2f2f2;
  background: #fff;
  border-radius: 5px;
}

.price-detail .subtitle {
  color: #f50;
}

.price-detail .available {
  font-size: 24px;
  font-weight: 700;
  color: #000;
  margin: 5px 0;
}

.price-detail .price {
  font-size: 12px;
}

.cell-group {
  border-top: 10px solid #f2f2f2;
}

.item {
  padding: 10px 15px;
  border-bottom: 1px solid #f2f2f2;
  line-height: 1.6;
  color: #999;
}

.item .date {
  font-size: 12px;
  text-align: right;
}

.item .top {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  color: #000;
  align-items: center;
}

.item .top .price {
  font-size: 18px;
}
